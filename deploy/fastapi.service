[Unit]
Description=FastAPI Video Editor Server
After=network.target

[Service]
Type=simple
User=idrees
WorkingDirectory=/opt/fastapi-app
Environment=PATH=/opt/fastapi-app/venv/bin
ExecStart=/opt/fastapi-app/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
